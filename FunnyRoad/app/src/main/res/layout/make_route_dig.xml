<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="40dp"
    android:elevation="10dp"
    android:padding="20dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_parameters"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textColor="@color/quantum_grey"
        />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <ImageButton
                android:id="@+id/dialog_minus_image_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:src="@drawable/baseline_remove_24" />

            <EditText
                android:id="@+id/dialog_distance_edit_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/white"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:hint="@string/_1000"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/dialog_plus_img_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_add_24" />

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/distance_hint"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/quantum_grey"
        />




</LinearLayout>




